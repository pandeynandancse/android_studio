<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    tools:context=".ui.gallery.GalleryFragment">

    <VideoView
        android:id="@+id/video_gallery"
        android:layout_width="407dp"
        android:layout_height="290dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text"
        android:layout_width="400dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:text="video is playing"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/video_gallery"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/video_gallery"
        app:layout_constraintTop_toBottomOf="@+id/video_gallery"
        android:layout_marginLeft="8dp"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/pic0"
        android:layout_width="350dp"
        android:layout_height="333dp"
        android:alpha="1"
        android:src="@drawable/bill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/video_gallery"
        app:layout_constraintVertical_bias="0.764" />


    <ImageView
        android:id="@+id/pic1"
        android:layout_width="350dp"
        android:layout_height="333dp"
        android:alpha="0"
        android:src="@drawable/rohit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/video_gallery"
        app:layout_constraintVertical_bias="0.764" />


    <ImageView
        android:id="@+id/pic2"
        android:layout_width="350dp"
        android:layout_height="333dp"
        android:alpha="0"
        android:src="@drawable/srk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/video_gallery"
        app:layout_constraintVertical_bias="0.764" />


    <ImageView
        android:id="@+id/pic3"
        android:layout_width="350dp"
        android:layout_height="333dp"
        android:alpha="0"
        android:src="@drawable/virat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/video_gallery"
        app:layout_constraintVertical_bias="0.537" />

    <ImageButton
        android:id="@+id/prev"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginBottom="192dp"
        android:layout_weight="1"
        android:src="@drawable/ic_skip_previous_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pic"

        app:layout_constraintVertical_bias="0.469" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginBottom="192dp"
        android:layout_weight="1"
        android:src="@drawable/ic_skip_next_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pic"
        app:layout_constraintVertical_bias="0.473" />

</androidx.constraintlayout.widget.ConstraintLayout>